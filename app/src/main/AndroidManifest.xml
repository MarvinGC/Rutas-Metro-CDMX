<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devmarvin.rutasdelmetro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_metro_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_metro_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RutasDelMetro" >
        <activity android:name=".ActivityComoLlegar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityBuscar"
            android:label="@string/buscar_label"
            android:parentActivityName=".ActivityComoLlegar">
        </activity>
        <activity android:name=".ActivityRutaFinal"
            android:label="@string/resultado_label"
            android:parentActivityName=".ActivityComoLlegar">
        </activity>
    </application>

</manifest>